<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Style du spinner par defaut -->
        <item name="android:spinnerItemStyle">@style/DefaultTextStyle</item>
        <!-- Style lorsque le spinner est ouvert et qu'on voit les différentes possibilités -->
        <item name="spinnerDropDownItemStyle">@style/DefaultTextStyle</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <!-- Creer le composant texte par défaut -->
    <!-- ici composant designe un ensemble des propriétés et name designe son nom -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <!-- Creer le composant sous titre par défaut -->
    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <!-- Creer le composant titre par défaut -->
    <style name="TitleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textSize">24sp</item>
    </style>


</resources>